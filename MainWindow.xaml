<Window x:Class="AsyncWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Async WPF App" Height="250" Width="400">
    <Grid>
        <Button x:Name="btnStart" Content="Start Slow Work" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Click="btnStart_Click"/>
        <Label x:Name="lblResult" Content="Waiting for task..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" />
        <Label x:Name="lblTime" Content="" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
